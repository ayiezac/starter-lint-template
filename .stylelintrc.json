{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-standard-scss",
    "stylelint-config-recommended",
    "stylelint-config-recess-order"
  ],
  "plugins": [
    "stylelint-order",
    "stylelint-plugin-defensive-css",
    "stylelint-gamut",
    "stylelint-no-indistinguishable-colors",
    "stylelint-scales",
    "stylelint-no-browser-hacks",
    "stylelint-declaration-block-no-ignored-properties",
    "stylelint-use-nesting"
  ],
  "rules": {
    "order/order": [
      "custom-properties",
      "declarations"
    ],
    "plugin/use-defensive-css": [
      true,
      {
        "severity": "warning"
      }
    ],
    "plugin/declaration-block-no-ignored-properties": true,
    "csstools/use-nesting": "ignore",
    "plugin/no-browser-hacks": [true],
    "value-no-vendor-prefix": true,
    "selector-id-pattern": null,
    "selector-class-pattern": null,
    "keyframes-name-pattern": null,
    "no-descending-specificity": null,
    "no-duplicate-selectors": true,
    "block-no-redundant-nested-style-rules": true,
    "font-family-no-duplicate-names": true,
    "font-family-no-missing-generic-family-keyword": true,
    "unit-no-unknown": true,
    "gamut/color-no-out-gamut-range": true,
    "plugin/stylelint-no-indistinguishable-colors": true,
    "scales/alpha-values": [80, 90],
    "scales/border-widths": [{ "scale": [1, 2], "units": ["px"] }],
    "scales/font-weights": [400, 600],
    "scales/line-heights": [1, 1.5],
    "scales/radii": [{ "scale": [2, 4], "units": ["px"] }],
    "scales/space": [{ "scale": [0.5, 1, 2, 4], "units": ["rem"] }]
  },
  "ignoreFiles": [
    "**/node_modules/**",
    "**/dist/**",
    "**/build/**",
    "**/*.min.css",
    "**/bootstrap*.css",
    "**/framework*.css"
  ]
}
